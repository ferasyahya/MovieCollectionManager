<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="233.0" prefWidth="245.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AddMovieController">
   <AnchorPane prefHeight="45.0" prefWidth="245.0">
      <children>
          <Label layoutX="65.0" layoutY="7.0" prefHeight="29.0" prefWidth="116.0" text="Movie Details">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
      </children>
   </AnchorPane>
    <HBox prefHeight="39.0" prefWidth="291.0" spacing="10">
      <AnchorPane prefHeight="35.0" prefWidth="321.0">
         <children>
              <Label layoutX="14.0" layoutY="13.0" text="Title:" />
              <TextField fx:id="titleField" layoutX="82.0" layoutY="9.0" promptText="ex: The Usual Suspects" />
         </children>
      </AnchorPane>
    </HBox>
    <HBox prefHeight="36.0" prefWidth="258.0" spacing="10">
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
              <Label layoutX="14.0" layoutY="10.0" text="Director:" />
              <TextField fx:id="directorField" layoutX="83.0" layoutY="6.0" prefHeight="25.0" prefWidth="149.0" promptText="ex: Bryan Singer" />
         </children>
      </AnchorPane>
    </HBox>
    <HBox prefHeight="37.0" prefWidth="291.0" spacing="10">
      <AnchorPane prefHeight="34.0" prefWidth="335.0">
         <children>
              <Label layoutX="14.0" layoutY="9.0" text="Genre:" />
              <ComboBox fx:id="genreComboBox" layoutX="82.0" layoutY="6.0" prefHeight="25.0" prefWidth="149.0" promptText="Genre" />
         </children>
      </AnchorPane>
    </HBox>
    <HBox prefHeight="39.0" prefWidth="291.0" spacing="10">
      <AnchorPane prefHeight="36.0" prefWidth="335.0">
         <children>
              <Label layoutX="14.0" layoutY="10.0" text="Year:" />
              <TextField fx:id="yearField" layoutX="82.0" layoutY="5.0" promptText="ex: 1995" />
         </children>
      </AnchorPane>
    </HBox>
    <HBox prefHeight="45.0" prefWidth="291.0" spacing="10">
      <AnchorPane prefHeight="42.0" prefWidth="294.0">
         <children>
              <Button fx:id="saveButton" layoutX="35.0" layoutY="9.0" onAction="#onSaveClicked" text="Save" />
              <Button fx:id="cancelButton" layoutX="173.0" layoutY="9.0" onAction="#onCancelClicked" text="Cancel" />
         </children>
      </AnchorPane>
    </HBox>
</VBox>
